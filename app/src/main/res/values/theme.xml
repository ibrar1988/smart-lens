<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>

        <item name="actionMenuTextColor">@color/colorPrimaryText</item>
    </style>

    <!-- Base application theme with no background. -->
    <style name="AppTheme.NoBackground">
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- Base application theme with no actionbar. -->
    <style name="AppTheme.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme with no actionbar and no background. -->
    <style name="AppTheme.NoActionbar.NoBackground">
        <item name="android:windowBackground">@null</item>
    </style>

    <!--Base theme with no actionbar and translucent status bar-->
    <!--Override in v19-->
    <style name="AppTheme.Translucent" parent="AppTheme.NoActionbar">
        <!--Do not remove-->
    </style>

    <!-- Base application theme with no actionbar and no background and translucent statusbar. -->
    <!--Override in v19-->
    <style name="AppTheme.Translucent.NoBackground">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorPrimaryText</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorSecondary">@color/colorPrimaryText</item>
    </style>
</resources>